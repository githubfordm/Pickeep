<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:id="@+id/book_popup">

    <TextView
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:text="책 그림 선택"
        android:layout_marginBottom="5dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        />

    <ImageButton
        android:id="@+id/getBook1"
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:layout_below="@+id/textView"
        android:src="@drawable/book_name1"/>

    <ImageButton
        android:id="@+id/getBook2"
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:layout_below="@+id/textView"
        android:layout_toRightOf="@+id/getBook1"
        android:src="@drawable/book_name2"/>

    <ImageButton
        android:id="@+id/getBook3"
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:layout_below="@+id/textView"
        android:layout_toRightOf="@+id/getBook2"
        android:src="@drawable/book_name3"/>

    <RadioGroup
        android:id="@+id/radio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/getBook1">

        <RadioButton
            android:id="@+id/radio1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            />

        <RadioButton
            android:id="@+id/radio2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="85dp"/>

        <RadioButton
            android:id="@+id/radio3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="95dp"/>

    </RadioGroup>

    <Button
        style="?android:attr/borderlessButtonStyle"
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CANCEL"
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/radio"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        style="?android:attr/borderlessButtonStyle"
        android:id="@+id/ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginTop="5dp"
        android:layout_alignBaseline="@+id/cancel"
        android:layout_alignBottom="@+id/cancel"
        android:layout_toLeftOf="@+id/cancel"
        android:layout_toStartOf="@+id/cancel" />


</RelativeLayout>